#!/usr/bin/env sh

set -x

export PATH="$HOME/.foundry/bin:$PATH"

DATA_DIR={{ obj.dbDir }}
export MNEMONIC="{{ obj.mnemonic }}"

anvil \
  --port 9545 \
  --host 0.0.0.0 \
  --balance 1000000000000000 \
  --gas-limit 1000000000000 \
  --gas-price 1 \
  --code-size-limit 10000000000 \
  --state $DATA_DIR \
  --verbosity \
  --mnemonic "$MNEMONIC" \
  --block-time 1
